<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit_text_common_style">
        <item name="android:textColor">#303030</item>
        <item name="android:textColorHint">@color/qiantengzi</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:background">@drawable/edit_text_bottom_border</item>
    </style>

    <style name="btn_common_style">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/ningmenghuang</item>
        <item name="android:textColor">@color/xuese</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xuese"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/et_username"
        style="@style/edit_text_common_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号、昵称、邮箱" />

    <EditText
        android:id="@+id/et_pwd"
        style="@style/edit_text_common_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        android:hint="新密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_kacha"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/round_ningmenghuang"
        android:text="咔嚓"
        android:textColor="@color/xuese" />

    <Button
        android:id="@+id/btn_register"
        style="@style/btn_common_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册" />
</RelativeLayout>
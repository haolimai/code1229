<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tianqing"
        android:baselineAligned="false"
        android:paddingTop="3dp">

        <LinearLayout
            android:id="@+id/ll_shouye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_ic_shouye"
                    style="@style/nav_bar_ic_common_style"
                    android:text="@string/icon_shouye" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_shouye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shouye"
                android:textColor="@color/xuese"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shaishai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_ic_shaishai"
                    style="@style/nav_bar_ic_common_style"
                    android:text="@string/icon_shaishai" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_shaishai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shaishai"
                android:textColor="@color/xuese"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_haoyouquan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_ic_haoyouquan"
                    style="@style/nav_bar_ic_common_style"
                    android:text="@string/icon_haoyouquan" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_haoyouquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/haoyouquan"
                android:textColor="@color/xuese"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nearby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_ic_nearby"
                    style="@style/nav_bar_ic_common_style"
                    android:text="@string/icon_nearby" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近的"
                android:textColor="@color/xuese"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_ic_wo"
                    style="@style/nav_bar_ic_common_style"
                    android:text="@string/icon_me" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_wo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/xuese"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ningmenghuang"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_ic_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/icon_share"
            android:textColor="@color/xuese"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tianqing"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/rl_homepage"
            style="@style/common_style">

            <TextView
                android:id="@+id/tv_ic_homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/ic_homepage"
                android:textColor="@color/xuese"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_find"
            style="@style/common_style">

            <TextView
                android:id="@+id/tv_ic_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/ic_find"
                android:textColor="@color/xuese"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_hashtag"
            style="@style/common_style">

            <TextView
                android:id="@+id/tv_ic_hashtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/ic_hashtag"
                android:textColor="@color/xuese"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_camera_retro"
            style="@style/common_style"
            android:background="@color/ningmenghuang">

            <ImageButton
                android:id="@+id/ib_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:textColor="@color/baicaoshuang"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_haoyouquan"
            style="@style/common_style">

            <TextView
                android:id="@+id/tv_ic_haoyouquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/ic_haoyouquan"
                android:textColor="@color/xuese"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_nearby"
            style="@style/common_style">

            <TextView
                android:id="@+id/tv_ic_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/ic_nearby"
                android:textColor="@color/xuese"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_me"
            style="@style/common_style">

            <TextView
                android:id="@+id/tv_ic_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/ic_me"
                android:textColor="@color/xuese"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
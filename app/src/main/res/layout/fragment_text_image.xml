<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFBE5">

    <LinearLayout
        android:background="#449CB7"
        android:id="@+id/llTitleBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:lineSpacingExtra="@dimen/_10dp"
        android:padding="@dimen/_20dp"
        android:textColor="@color/xiangsihui"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/rain">

        <TextView
            android:id="@+id/tv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:text="@string/fa_arrow_right"
            android:textColor="@color/xuese"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>

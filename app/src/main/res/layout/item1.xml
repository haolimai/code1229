<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="avatar"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_avatar"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="nickname"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="time"
            android:textColor="@color/zhenghui" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="picture"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:padding="10dp"
        android:text="desc"
        android:textColor="@color/xiangsihui" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_ic_thumbs_up"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/fa_thumbs_up"
            android:textColor="@color/zitenghui"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_ic_smile"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/fa_smile_o"
            android:textColor="@color/zitenghui"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_ic_frown"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/fa_frown_o"
            android:textColor="@color/zitenghui"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_ic_comment_o"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/fa_comment_o"
            android:textColor="@color/zitenghui"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10254"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次赞，"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="102545"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次微笑"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次皱眉，"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次评论"
            android:textColor="@color/tianqing"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>